@model DataFileAccueil
@{
    ViewData["Title"] = "SERVICE | " + ViewData["service"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CWEB | @ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body style="overflow: hidden;">
    <div class="main-custom-back">
        <div class="container">
            <div class="w-100 row">
                <div class="col-md-5">
                    <div class="mt-3 card">
                        <div class="card-header border-bottom">
                            <h4 class="card-title text-uppercase">FILE D'ATTENTE : @ViewData["service"] (@ViewData["CountFA"])</h4>
                        </div>
                        <div class="card-body content-slider-width">
                            <div class="row">
                                @foreach (var item in Model.Attente)
                                {
                                    <div class="col-xl-4">
                                        <div class="bg-info dash-widget">
                                            <div class="dash-widget-info text-left">
                                                    <h3 class="mb-0 d-flex justify-content-between align-item-center text-white">@item.Ticket</h3>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="mt-3 card">
                        <div class="card-header border-bottom">
                            <h4 class="card-title">RECEPTION</h4>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.Accueil1)
                            {
                                <div class="bg-info dash-widget">
                                    <div class="dash-widget-info text-left">
                                        <h3 class="mb-0 d-flex justify-content-between align-item-center text-white">@item.Ticket</h3>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="fixed-bottom w-100 mb-3">
            <div class="w-100">
                <div class="text-center">
                    <small class="mb-0 text-white">CWeb | Version 1.0</small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        setInterval(function () {
            location.reload();
        }, 5000);
    </script>
</body>
</html>
