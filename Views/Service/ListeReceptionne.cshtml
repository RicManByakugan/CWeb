@{
    Layout = "~/Views/Shared/_LayoutService.cshtml";
    ViewData["Title"] = "FILE D'ATTENTE";
}
@model IEnumerable<Patient>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h4 class="card-title text-uppercase">@ViewData["POSTE"]</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4">
                            <div class="bg-info dash-widget">
                                <div class="dash-widget-info text-left d-flex justify-content-between">
                                    <h3 class="mb-0 d-flex justify-content-between align-item-center text-white">@item.Ticket</h3>
                                    <div class="d-flex justify-content-between align-item-center text-white">
                                        <a asp-controller="Service" asp-action="Validation" asp-route-id="@item.Id" class="small btn-sm btn-success btn mr-2"><i class="fa fa-check"></i></a>
                                        <a asp-controller="Service" asp-action="Retire" asp-route-id="@item.Id" class="small btn-sm btn-danger btn"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


