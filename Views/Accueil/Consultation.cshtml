@model Patient

<h1>Consultation Patient</h1>

@Html.DisplayNameFor(model => model.Ticket)
<br />
<form asp-action="Consultation">
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prenom" class="control-label"></label>
        <input asp-for="Prenom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sexe" class="control-label"></label>
        <select asp-for="Sexe" class="form-control">
            <option>HOMME</option>
            <option>FEMME</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telephone" class="control-label"></label>
        <input asp-for="Telephone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresse" class="control-label"></label>
        <input asp-for="Adresse" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ResultatConsultation" class="control-label"></label>
        <textarea asp-for="ResultatConsultation" class="form-control"></textarea>
    </div>
    <select asp-for="Service" class="form-control">
        <option>DENTAIRE</option>
        <option>GYNECO</option>
    </select>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

