<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    <title>CWEB | @ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a asp-controller="Informatique" asp-action="Index" class="logo">
                    <img src="~/img/logo.png" width="35" height="35" alt=""> <span>CWeb</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span>@ViewData["USER"]</span>
                    </a>
                    <div class="dropdown-menu">
                        <a asp-controller="Informatique" asp-action="Profile" class="dropdown-item">Profile</a>
                        <a asp-controller="Informatique" asp-action="EditProfile" class="dropdown-item">Modification</a>
                        <a asp-controller="Informatique" asp-action="EditProfilePassword" class="dropdown-item">Mot de passe</a>
                        <a asp-controller="Informatique" asp-action="Logout" class="dropdown-item">Deconnexion</a>
                    </div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a asp-controller="Informatique" asp-action="Profile" class="dropdown-item">Profile</a>
                    <a asp-controller="Informatique" asp-action="EditProfile" class="dropdown-item">Modification</a>
                    <a asp-controller="Informatique" asp-action="EditProfilePassword" class="dropdown-item">Mot de passe</a>
                    <a asp-controller="Informatique" asp-action="Logout" class="dropdown-item">Deconnexion</a>
                </div>
            </div>
        </div>

        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">Personnel</li>
                        <li>
                            <a asp-controller="Informatique" asp-action="Create"><span>Nouveau</span></a>
                        </li>
                        <li>
                            <a asp-controller="Informatique" asp-action="Index"><span>Membre</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/Chart.bundle.js"></script>
    <script src="~/js/chart.js"></script>
    <script src="~/js/app.js"></script>
</body>

</html>